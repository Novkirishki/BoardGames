@using BoardGames.Common

@{
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
}

@section navigation {
    <header id="header">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 overflow">
                    <div class="social-icons pull-right">
                        <ul class="nav nav-pills">
                            <li><a href=""><i class="fa fa-facebook"></i></a></li>
                            <li><a href=""><i class="fa fa-twitter"></i></a></li>
                            <li><a href=""><i class="fa fa-google-plus"></i></a></li>
                            <li><a href=""><i class="fa fa-dribbble"></i></a></li>
                            <li><a href=""><i class="fa fa-linkedin"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="navbar navbar-inverse" role="banner">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                    <a class="navbar-brand" href="/">
                        <h1><img src="~/images/logo.png" alt="logo"></h1>
                    </a>

                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-left">
                        <li>@Html.ActionLink("Home", "Index", new { area = "", controller = "Home" })</li>
                        <li>@Html.ActionLink("Contact", "Contact", new { area = "", controller = "Home" })</li>
                        <li>@Html.ActionLink("Reviews", "Index", new { area = "Public", controller = "Reviews", page = 1 })</li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="dropdown">
                                <a href="~/Private/Tutorials/Index">Tutorials <i class="fa fa-angle-down"></i></a>
                                <ul role="menu" class="sub-menu">
                                    <li>@Html.ActionLink("Tutorials", "Index", new { area = "Private", controller = "Tutorials", page = 1 })</li>
                                    <li>@Html.ActionLink("Create new", "Create", new { area = "Private", controller = "Tutorials" })</li>
                                </ul>
                            </li>
                        }
                        @if (User.IsInRole(GlobalConstants.AdministratorRoleName))
                        {
                            <li class="dropdown">
                                <a href="~/Admin/Home">Admin panel <i class="fa fa-angle-down"></i></a>
                                <ul role="menu" class="sub-menu">
                                    <li>@Html.ActionLink("Home", "Index", new { area = "Admin", controller = "Home" })</li>
                                    <li>@Html.ActionLink("Categories", "Index", new { area = "Admin", controller = "Categories" })</li>
                                    <li>@Html.ActionLink("Reviews", "Index", new { area = "Admin", controller = "Reviews" })</li>
                                    <li>@Html.ActionLink("Tutorials", "Index", new { area = "Admin", controller = "Tutorials" })</li>
                                    <li>@Html.ActionLink("Comments", "Index", new { area = "Admin", controller = "Comments" })</li>
                                    <li>@Html.ActionLink("Users", "Index", new { area = "Admin", controller = "Users" })</li>
                                </ul>
                            </li>
                        }
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
                <div class="search">
                    <form role="form">
                        <i class="fa fa-search"></i>
                        <div class="field-toggle">
                            <input type="text" class="search-form" autocomplete="off" placeholder="Search">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </header>
    <!--/#header-->
    @RenderSection("navigation", false)
}

@section breadcrumps {
    @RenderSection("breadcrumps", false)
}

@RenderBody()

@section scripts {
    @RenderSection("scripts", false)
}
