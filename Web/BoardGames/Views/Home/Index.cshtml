@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="home-slider">
    <div class="container">
        <div class="row">
            <div class="main-slider">
                <div class="slide-text">
                    <h1>Welcome to Board Games Kingdom</h1>
                    <p>
                        This is a site where you can find all the information you need about your favourite board games.
                        Not only that but you can also find new games to spend your time on.
                        There are many reviews, tutorials and events.
                        Go get some fun!
                    </p>
                    @if (!Request.IsAuthenticated)
                    {
                        <a href="#" class="btn btn-common">SIGN UP</a>
                    }
                </div>
                <img src="~/images/home/slider/hill.png" class="slider-hill" alt="slider image">
                <img src="~/images/home/slider/house.png" class="slider-house" alt="slider image">
                <img src="~/images/home/slider/sun.png" class="slider-sun" alt="slider image">
                <img src="~/images/home/slider/birds1.png" class="slider-birds1" alt="slider image">
                <img src="~/images/home/slider/birds2.png" class="slider-birds2" alt="slider image">
            </div>
        </div>
    </div>
    <div class="preloader"><i class="fa fa-sun-o fa-spin"></i></div>
</section>
<!--/#home-slider-->

<section id="action">
    <div class="vertical-center">
        <div class="container">
            <div class="row">
                <div class="action count">
                    <div class="col-sm-3 text-center wow bounceIn" data-wow-duration="1000ms" data-wow-delay="300ms">
                        <h1 class="timer bold" data-to="320" data-speed="3000" data-from="0"></h1>
                        <h3>Happy Users</h3>
                    </div>
                    <div class="col-sm-3 text-center wow bounceIn" data-wow-duration="1000ms" data-wow-delay="300ms">
                        <h1 class="timer bold" data-to="1200" data-speed="3000" data-from="0"></h1>
                        <h3>Total Reviews</h3>
                    </div>
                    <div class="col-sm-3 text-center wow bounceIn" data-wow-duration="1000ms" data-wow-delay="300ms">
                        <h1 class="timer bold" data-to="432" data-speed="3000" data-from="0"></h1>
                        <h3>Total Tutorials</h3>
                    </div>
                    <div class="col-sm-3 text-center wow bounceIn" data-wow-duration="1000ms" data-wow-delay="300ms">
                        <h1 class="timer bold" data-to="12" data-speed="3000" data-from="0"></h1>
                        <h3>Total Events</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--/#action-->

<section id="features">
    <div class="container">
        <div class="row">
            <div class="single-features">
                <div class="col-sm-5 wow fadeInLeft" data-wow-duration="500ms" data-wow-delay="300ms">
                    <img src="~/images/home/icon1.jpg" class="img-responsive" alt="">
                </div>
                <div class="col-sm-6 wow fadeInRight" data-wow-duration="500ms" data-wow-delay="300ms">
                    <h2>Expert game reviews</h2>
                    <P>A lot of reviews from game critics and experts about the games you love! Here you can be the first to learn about new and upcomming games and details about them.</P>
                </div>
            </div>
            <div class="single-features">
                <div class="col-sm-6 col-sm-offset-1 align-right wow fadeInLeft" data-wow-duration="500ms" data-wow-delay="300ms">
                    <h2>Game tips, tricks and tutorials</h2>
                    <P>Games tutorials, tips and tricks for begginers and advanced players. Made by the greatest players for you. If you want to improve your gaming skills and smash your friends here is the right place.</P>
                </div>
                <div class="col-sm-5 wow fadeInRight" data-wow-duration="500ms" data-wow-delay="300ms">
                    <img src="~/images/home/icon2.jpg" class="img-responsive" alt="">
                </div>
            </div>
            <div class="single-features">
                <div class="col-sm-5 wow fadeInLeft" data-wow-duration="500ms" data-wow-delay="300ms">
                    <img src="~/images/home/icon3.jpg" class="img-responsive" alt="">
                </div>
                <div class="col-sm-6 wow fadeInRight" data-wow-duration="500ms" data-wow-delay="300ms">
                    <h2>Organized live events</h2>
                    <P>Organized live game events where you can meet other players, make friends or enemies. Test your skills with them, exchange ideas and knowledge, try new games and have great fun while doing this.</P>
                </div>
            </div>
        </div>
    </div>
</section>
<!--/#features-->

@section Scripts {
    @Scripts.Render("~/bundles/jqueryCountTo")
}