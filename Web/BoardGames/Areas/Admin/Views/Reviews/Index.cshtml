@model IEnumerable<BoardGames.Data.Models.Review>

@{
    ViewBag.Title = "Reviews";
    ViewBag.Subtitle = "Home";
}

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-submit" })
</p>
<table class="table">
    <tr>
        <th>
            Category
        </th>
        <th>
            Game Title
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedOn)
        </th>
        <th>
            Players
        </th>
        <th>
            Age
        </th>
        <th>
            Playing time
        </th>
        <th>
            Creator
        </th>
        <th>
            Official site
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GameTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedOn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MinPlayers) - 
            @Html.DisplayFor(modelItem => item.MaxPlayers)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MinAgeRequired) +
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MinPlayingTimeInMinutes)+
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Creator.UserName)
        </td>
        <td>
            <a href="@Html.DisplayFor(modelItem => item.UrlToOfficialSite)">site</a>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
